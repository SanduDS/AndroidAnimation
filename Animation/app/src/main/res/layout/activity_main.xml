<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sandusandu.animation.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textStatus"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="match_parent">

        <Button
            android:text="FADE IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btnFadeIn "
            android:layout_alignRight="@+id/btnLeftRight "
            android:layout_alignEnd="@+id/btnLeftRight " />

        <Button
            android:text="FADE OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFadeOut "
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnZoomOut"
            android:layout_alignStart="@+id/btnZoomOut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_alignBaseline="@+id/btnZoomIn "
            android:layout_alignBottom="@+id/btnZoomIn "
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="ZOOM IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnZoomIn "
            android:layout_below="@+id/btnFadeIn "
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnFadeIn "
            android:layout_alignEnd="@+id/btnFadeIn " />

        <Button
            android:text="TOP BOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ btnTopBottom "
            android:layout_below="@+id/btnZoomOut"
            android:layout_alignRight="@+id/btnZoomOut"
            android:layout_alignEnd="@+id/btnZoomOut"
            android:layout_alignLeft="@+id/btnZoomOut"
            android:layout_alignStart="@+id/btnZoomOut" />

        <Button
            android:text="ZOOM OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnZoomOut"
            android:layout_below="@+id/btnFadeInOut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="BOUNCE "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ btnBounce"
            android:layout_below="@+id/btnLeftRight "
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnLeftRight "
            android:layout_alignEnd="@+id/btnLeftRight " />

        <Button
            android:text=" RIGHT LEFT  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ btnRightLeft "
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btnFadeInOut"
            android:layout_alignStart="@+id/btnFadeInOut" />

        <Button
            android:text="LEFT RIGHT "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLeftRight "
            android:layout_below="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="FLASH "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ btnFlash"
            android:layout_below="@+id/ btnTopBottom "
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/ btnTopBottom "
            android:layout_alignStart="@+id/ btnTopBottom " />

        <Button
            android:text="FADE IN OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFadeInOut"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="ROTATE LEFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRotateLeft"
            android:textSize="12sp"
            android:layout_below="@+id/ btnRightLeft "
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:layout_toLeftOf="@+id/ btnRightLeft "
            android:layout_toStartOf="@+id/ btnRightLeft " />

        <Button
            android:text="ROTATE RIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ btnRotateRight "
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/btnRotateLeft"
            android:layout_alignBottom="@+id/btnRotateLeft"
            android:layout_toEndOf="@+id/ btnRightLeft "
            android:layout_toRightOf="@+id/ btnRightLeft " />

        <SeekBar
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="32dp"
            android:id="@+id/seekBarSpeed"
            android:layout_toLeftOf="@+id/ btnRotateRight "
            android:layout_toStartOf="@+id/ btnRotateRight "
            android:max="5000" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/seekBarSpeed"
            android:layout_alignLeft="@+id/ btnFlash"
            android:layout_alignStart="@+id/ btnFlash"
            android:id="@+id/textSeekerSpeed" />
    </RelativeLayout>
</LinearLayout>
